{
  "version": 2,
  "buildCommand": "npm install -g pnpm && pnpm install && pnpm build",
  "installCommand": "npm install -g pnpm && pnpm install",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://tkrell-backend.onrender.com/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://tkrell-backend.onrender.com"
  }
}
